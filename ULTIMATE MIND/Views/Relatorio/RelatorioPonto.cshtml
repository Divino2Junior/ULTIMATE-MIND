@{
    Layout = "_Layout";
    ViewData["Title"] = "Relatório Ponto";
}

<script src="/frameworks/datatable/datatables.min.js?v=@ViewBag.Versao"></script>
<link href="/frameworks/datatable/datatables.min.css?v=@ViewBag.Versao" rel="stylesheet" />
<link rel="stylesheet" href="~/Font-Awesome/css/all.min.css?v=@ViewBag.Versao" />
<script type="text/javascript" src="/Font-Awesome/js/all.min.js?v=@ViewBag.Versao"></script>


<div class="box padding-10">
    <div class="box-body">
        <div class="card">
            <div class="card-header filtroPrimary" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="true" aria-hidden="false" aria-controls="collapseExample">
                <h4 class="card-title">Filtros - Relatório de Ponto</h4>
            </div>
            <div class="collapse show" id="collapseExample" aria-expanded="true">
                <div class="card-body">
                    <div class="row" style="margin-top: 5px;">
                        <div class="col-md-12" style="padding: 0;">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="txtDataInicial" class="form-label">Data inicial</label>
                                        <input type="date" class="form-control" id="txtDataInicial">
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="txtDataFim" class="form-label">Data final</label>
                                        <input type="date" class="form-control" id="txtDataFim">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="selectColaborador" class="form-label">Selecione um Colaborador:</label>
                                        <select class="form-control" id="selectColaborador"></select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group" style=" padding-top:30px;">
                                        <button class="btn btn-success" type="submit" id="btnBuscarDados">
                                                <i class="fas fa-search"></i>
                                            Buscar
                                        </button>
                                        <button class="btn btn-info" type="submit" id="btnExportarRelatorio">
                                            <i class="fa-solid fa-file-export"></i>
                                            Exportar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12" style="padding-top:20px;">
            <table id="tabelaRelatorioPonto" border="1" class="table table-striped table-bordered nowrap" data-paging="false" data-info="false" style="table-layout:fixed;">
                <thead>
                    <tr>
                        <th>
                            Matrícula
                        </th>
                        <th>
                            Cargo
                        </th>
                        <th>
                            Colaborador
                        </th>
                        <th>
                            Data
                        </th>
                        <th>
                            Entrada
                        </th>
                        <th>
                           Saída Almoço
                        </th>
                        <th>
                            Retorno Almoço
                        </th>
                        <th>
                            Saída
                        </th>
                        <th>
                            Ação
                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>