@{
    Layout = "_Layout";
    ViewData["Title"] = "Cadastro de Usuário";
}

<script src="/frameworks/datatable/datatables.min.js"></script>
<link href="/frameworks/datatable/datatables.min.css" rel="stylesheet" />
<script type="text/javascript" src="/JsPagina/Administracao/CadastroUsuario/script.js"></script>
<link rel="stylesheet" href="/css/cadastroUsuario/style.css">



<div class="table-bordered">
    <h1 class="text-centerador">Colaboradores</h1>
    <br>

    <div class="mb-3">
        <button type="button" class="btn btn-primary" onclick="novoUsuario();" id="novo">
            Adicionar
        </button>
    </div>

    <table id="table-colab" class="table table-responsive">
        <thead>
            <tr class="titulo">
                <th>Matrícula</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Função</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody class="table-body">
        </tbody>
    </table>
</div>

<div class="modal" id="modalCadastroCliente">

    <div class="modal-dialog modal-xl modal-dialog-scrollable">

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Adicionar colaborador</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="m-matricula" class="col-form-label">Matrícula</label>
                                <input type="text" maxlength="20" class="form-control" id="m-matricula" required>
                            </div>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                                <label for="m-nome" class="col-form-label">Nome</label>
                                <input type="text" maxlength="50" class="form-control" id="m-nome" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="m-cpf" class="col-form-label">CPF</label>
                                <input type="text" class="form-control" id="m-cpf" maxlength="14" />
                            </div>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                                <label for="m-telefone" class="col-form-label">Telefone</label>
                                <input type="text" class="form-control" id="m-telefone" />
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col">
                            <div class="mb-3">
                                <label for="m-email" class="col-form-label">E-mail</label>
                                <input type="email" class="form-control" id="m-email" />
                            </div>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                                <label for="m-rg" class="col-form-label">RG</label>
                                <input type="text" class="form-control" id="m-rg" />
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="selectStatus" class="col-form-label">Status</label>
                                <select class="js-example-responsive" style="width: 100%" id="selectStatus">
                                </select>
                            </div>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                                <label for="selectFuncao" class="col-form-label">Função</label>
                                <select class="js-example-responsive" style="width: 100%" id="selectFuncao">
                                </select>
                            </div>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                                <label for="selectGrupoPermissao" class="col-form-label">Grupo de Usuário</label>
                                <select class="js-example-responsive" style="width: 100%" id="selectGrupoPermissao">
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="m-dataNascimento" class="col-form-label">Data de nascimento</label>
                                <input type="date" class="form-control" id="m-dataNascimento" />
                            </div>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                                <label for="m-dataAdmissao" class="col-form-label">Data de admissão</label>
                                <input type="date" class="form-control" id="m-dataAdmissao" />
                            </div>

                        </div>
                        <div class="col">
                            <div class="mb-3">
                                <label for="m-dataDemissao" class="col-form-label">Data de demissão</label>
                                <input type="date" class="form-control" id="m-dataDemissao" />
                            </div>
                        </div>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-outline-primary" id="btn-salvar" onclick="salvarUsuario();">Salvar</button>
            </div>
        </div>
    </div>
</div>