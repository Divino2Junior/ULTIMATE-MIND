<div class="modal" id="exampleModal">

    <div class="modal-dialog modal-xl modal-dialog-scrollable">

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Adicionar colaborador</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="m-matricula" class="col-form-label">Matrícula</label>
                                <input type="text" maxlength="20" class="form-control" id="m-matricula" required>
                            </div>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                                <label for="m-nome" class="col-form-label">Nome</label>
                                <input type="text" maxlength="50" class="form-control" id="m-nome" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="m-cpf" class="col-form-label">CPF</label>
                                <input type="text" class="form-control" id="m-cpf" maxlength="14" />
                            </div>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                                <label for="m-telefone" class="col-form-label">Telefone</label>
                                <input type="text" class="form-control" id="m-telefone" />
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col">
                            <div class="mb-3">
                                <label for="m-email" class="col-form-label">E-mail</label>
                                <input type="email" class="form-control" id="m-email" />
                            </div>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                                <label for="m-rg" class="col-form-label">RG</label>
                                <input type="text" class="form-control" id="m-rg" />
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="m-status" class="col-form-label">Status</label>
                                <select class="form-select" aria-label="Default select example" id="m-status">
                                    <option selected>Selecione o status do colaborador</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                                <label for="" class="col-form-label">Função</label>
                                <select class="form-control" name="state" id="select-funcao">
                                    <option value="AL">Alabama</option>
                                    <option value="WY">Wyoming</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="m-dataNascimento" class="col-form-label">Data de nascimento</label>
                                <input type="date" class="form-control" id="m-dataNascimento" />
                            </div>
                        </div>

                        <div class="col">
                            <div class="mb-3">
                                <label for="m-dataAdmissao" class="col-form-label">Data de admissão</label>
                                <input type="date" class="form-control" id="m-dataAdmissao" />
                            </div>

                        </div>
                        <div class="col">
                            <div class="mb-3">
                                <label for="m-dataDemissao" class="col-form-label">Data de demissão</label>
                                <input type="date" class="form-control" id="m-dataDemissao" />
                            </div>
                        </div>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-outline-primary" id="btn-salvar">Salvar</button>
            </div>
