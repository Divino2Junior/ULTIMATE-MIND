@{
    Layout = "_Layout";
    ViewData["Title"] = "Cadastro de Contra-Cheque";
}

<script src="/frameworks/datatable/datatables.min.js"></script>
<link href="/frameworks/datatable/datatables.min.css" rel="stylesheet" />
<script src="/JsPagina/DepartamentoPessoal/CadastroContraCheque.js"></script>

<div class="row">
    <div class="col-md-6" style="padding:20px;">
        <h4>Contra-Cheques Cadastrados</h4>
        <table id="contraChequesTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Usuário</th>
                    <th>Mês/Ano de Referência</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                <!-- Os registros existentes serão carregados aqui -->
            </tbody>
        </table>
    </div>
    <div class="col-md-6" style="padding:20px;">
        <h4>Novo Contra-Cheque</h4>
        <form id="novoContraChequeForm" method="post" action="/DepartamentoPessoal/InserirContraCheque" enctype="mul">
            <div class="form-group">tipart/form-data">
            <div class="form-group">
                <label for="selectUsuario">Usuário:</label>
                <select class="js-example-responsive" style="width: 100%" id="selectUsuario" name="usuario">
                </select>
            </div>
            <div class="form-group">
                <label for="mesReferencia">Mês de Referência:</label>
                <input type="month" class="form-control mb-3" id="mesReferencia" name="mesReferencia">
            </div>
                <label for="arquivoPdf">Arquivo PDF:</label>
                <input type="file" class="form-control-file mb-3" id="arquivoPdf" name="arquivoPdf">
            </div>
            <button type="submit" class="btn btn-primary" id="btnInserirContraChque">Inserir Contra-Cheque</button>
        </form>
    </div>

</div>
