@{
    Layout = "_Layout";
    ViewData["Title"] = "Liberação de Ponto";
}

<script src="/frameworks/datatable/datatables.min.js?v=@ViewBag.Versao"></script>
<link href="/frameworks/datatable/datatables.min.css?v=@ViewBag.Versao" rel="stylesheet" />
<script src="/JsPagina/DepartamentoPessoal/LiberacaoPonto.js?v=@ViewBag.Versao"></script>

<div class="box padding-10">
    <div class="box-body">
        <h1 style="padding-bottom: 10px; padding-top: 10px;">Liberação de Ponto</h1>

        <div class="mb-3">
            <button type="button" class="btn btn-primary" onclick="AbrirModalNovaLiberacaoPonto();" id="novo">
                Adicionar
            </button>
        </div>

        <table id="tabelaLiberacaoPonto" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Colaborador Liberado</th>
                    <th>Gestor</th>
                    <th>Data</th>
                    <th>Hora</th>
                    <th>Observação</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- Modal de Relacionamento Obra ao Usuário -->
<div class="modal fade" id="modalLiberacaoPonto">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Relacionar Obra ao Usuário</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="liberacaoPontoUsuarioForm" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="selectUsuario" class="col-form-label">Usuário</label>
                                <select class="js-example-responsive" style="width: 100%" id="selectUsuario">
                                    <!-- Opções de usuários aqui -->
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <h5 class="card-title">Observação</h5>
                            <textarea id="txtObservacao" class="form-control mb-3" rows="4"></textarea>
                        </div>                        
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-outline-primary" onclick="AdicionarLiberacaoPonto();">Salvar</button>
            </div>
        </div>
    </div>
</div>