<!DOCTYPE html>
<html lang="en">
<head>
    <environment>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - ULTIMATE MIND</title>
        <link rel="stylesheet" href="/frameworks/bootstrap-5.3.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/jquery-confirm.css" />
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="~/js/site.js"></script>
        <script type="text/javascript" src="~/js/jquery-confirm.js"></script>        
        <script src="/frameworks/jquery_3.7/jquery.js"></script>
        <script type="text/javascript" src="~/frameworks/bootstrap-5.3.0/js/bootstrap.bundle.min.js"></script>
        <script type="text/javascript" src="~/frameworks/bootstrap-5.3.0/popper.js"> </script>
        <script src="/frameworks/jquery_3.7/jquery.mask.min.js"></script>

        @RenderSection("sripts", required: false)
    </environment>

</head>
<body class="vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">ULTIMATE MIND</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="menu-cracha">Crachá Digital</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="menu-adm" role="button" data-bs-toggle="dropdown" aria-expanded="false">Administração</a>
                        <ul class="dropdown-menu" aria-labelledby="menu-adm">
                            <li><a class="dropdown-item" href="#" id="menu-dropEmpresa">Empresa</a></li>
                            <li><a class="dropdown-item" href="#" id="menu-dropGrupoUsuario">Grupo de Usuários</a></li>
                            <li><a class="dropdown-item" href="#" id="menu-dropUsuario">Usuários</a></li>
                            <li><a class="dropdown-item" href="#" id="menu-dropConfig">Configuração</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="menu-dptPessoal" role="button" data-bs-toggle="dropdown" aria-expanded="false">Departamento Pessoal</a>
                        <ul class="dropdown-menu" aria-labelledby="menu-dptPessoal">
                            <li><a class="dropdown-item" href="#" id="menu-dropPontoEletronico">Ponto Eletrônico</a></li>
                            <li><a class="dropdown-item" href="#" id="menu-dropContraCheque">Contra Cheque</a></li>
                            <li class="dropdown">
                                <a class="dropdown-item dropdown-toggle" href="#" id="menu-dropRelatorios" role="button" data-bs-toggle="dropdown" aria-expanded="false">Relatórios</a>
                                <ul class="dropdown-menu" aria-labelledby="menu-dropRelatorios">
                                    <li><a class="dropdown-item" href="#" id="">Ponto Eletrônico</a></li>
                                    <li><a class="dropdown-item" href="#" id="">Contra Cheque</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <!-- Novas opções: Cliente -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="menu-cliente" role="button" data-bs-toggle="dropdown" aria-expanded="false">Cliente</a>
                        <ul class="dropdown-menu" aria-labelledby="menu-cliente">
                            <li><a class="dropdown-item" href="#" id="menu-qrCode">QrCode</a></li>
                            <li><a class="dropdown-item" href="#" id="menu-cadastro">Cadastro</a></li>
                        </ul>
                    </li>
                    <!-- Novas opções: Atendimento -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="menu-atendimento" role="button" data-bs-toggle="dropdown" aria-expanded="false">Atendimento</a>
                        <ul class="dropdown-menu" aria-labelledby="menu-atendimento">
                            <li><a class="dropdown-item" href="#" id="menu-inicio">Atendimento</a></li>
                            <li><a class="dropdown-item" href="#" id="menu-relatorioAtendimento">Relatório</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <div id="content" style="height: 100vh;">
        @RenderBody()
    </div>
</body>
</html>
